@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;
	var home = @CurrentPage.Site();
}

<!DOCTYPE html>
<html lang="en">
  <head>

    <!-- Meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="@CurrentPage.siteDescription">

    <title>@CurrentPage.Name | @CurrentPage._siteTitle</title>
	
	<!-- Fonts -->
	<link href="//fonts.googleapis.com/css?family=Merriweather:400,700,300,900" rel="stylesheet" type="text/css">
	<link href="//fonts.googleapis.com/css?family=Lato:300,400,700,900" rel="stylesheet" type="text/css">
	
    <!-- CSS -->
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/fanoe.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="//oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>
	<div class="container-fluid">
    <header class="row" style="background-color: gainsboro;padding-bottom:25px">
      <div class="col-md-3 col-lg-3 col-sm-4 text-center col-xs-12" style="background-color: gray;color:white;height:125px;line-height: 125px;">LOGO RESET</div>
      <div class="col-md-2 col-lg-2 col-sm-3 text-center pull-right col-xs-12 " style="background-color: gray;color:white;height:125px;line-height: 125px">WYSZUKAJ</div>
      </header>

      <nav class="row text-center" style="background-color: gainsboro">
      <div class="col-md-2 col-lg-2 col-sm-2" style="background-color: greenyellow;height:25px;line-height:25px">Aktualności</div>
      <div class="col-md-2 col-lg-2 col-sm-2" style="background-color: indianred;height:25px;line-height:25px">Artykuły</div>
      <div class="col-md-2 col-lg-2 col-sm-2" style="background-color: greenyellow;height:25px;line-height:25px">Projekty</div>
      <div class="col-md-2 col-lg-2 col-sm-2" style="background-color: indianred;height:25px;line-height:25px">Wydarzenia</div>
      <div class="col-md-2 col-lg-2 col-sm-2" style="background-color: greenyellow;height:25px;line-height:25px">Kontakt</div>
      </nav>
	
    @RenderBody()

     <footer class="row" style="height:200px;background-color: gainsboro">
    <div class="col-md-2 col-lg-2 col-sm-3 col-xs-12 " style="background-color: gray;height:inherit"></div>
    <div class="col-md-4 col-md-offset-2 col-lg-offset-2 col-lg-4 col-sm-6 col-xs-12 " style="background-color: lightslategray;height:inherit"></div>
    <div class="col-md-2 col-md-offset-2 col-lg-offset-2 col-lg-2 col-sm-3 col-xs-12 " style="background-color: gray;height:inherit"></div>
  </footer>
    
    <!-- Javascripts -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
	<script src="/scripts/fanoe.js"></script>
			</div>
  </body>
</html>